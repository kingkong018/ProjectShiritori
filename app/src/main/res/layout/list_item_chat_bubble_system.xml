<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/system_icon"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_profile_icon"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@drawable/balloon_incoming_normal"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/system_icon">

        <LinearLayout
            android:id="@+id/linear_layout_chat_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_chat_bubble_system_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:text="User1"
                android:textSize="16sp"
                android:textColor="#0a0202" />

            <TextView
                android:id="@+id/tv_chat_bubble_system_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:autoLink="web"
                android:maxWidth="280dp"
                android:text="仔大仔世界"
                android:textColor="#f7b52a2a"
                android:paddingRight="10dp"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>