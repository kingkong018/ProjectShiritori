<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rank_item">
    <TextView android:id="@+id/rank_item_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:hint="1"
        android:textSize="20sp"
        android:layout_marginRight="10dp"
        android:textColor="#324eff" />
    <TextView android:id="@+id/rank_item_name"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:lines="2"
        android:textSize="15sp"
        android:layout_marginRight="10dp"
        android:hint="無名氏"/>
    <TextView android:id="@+id/rank_item_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textSize="20sp"
        android:hint="10"
        android:layout_marginRight="10dp"
        android:textColor="#2e9234" />
    <TextView android:id="@+id/rank_item_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textSize="20sp"
        android:hint="10"
        android:layout_marginRight="10dp"
        android:textColor="#ff1539" />
</LinearLayout>